#include <stdio.h>

int main() {
    float height;
    float width;
    printf("Enter the height of rectangle: ");
    scanf("%f", &height);
    printf("\nEnter the width of rectangle: ");
    scanf("%f", &width);
    printf("\n********************************");
    printf("\nArea of rectangle is: %.2f", height*width);
    printf("\nPerimeter of rectangle is: %.2f", (2*height)+(2*width));
}
